<link rel="stylesheet" href="/Content/healthData.css" />
<h1>Welcome <%= displayName %></h1>
<h1><%= title %></h1>

<div class="container rounded bg-white mt-5 mb-5">
  <div class="row mb-10" style="height: 110vh">
    <div class="col-md-4 border-right">
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <a class="nav-link active" href="/profile"
          ><i class="fas fa-chevron-left"></i> Back</a
        >
        <img
          class="rounded-circle mt-5"
          width="150px"
          src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"
        /><span class="font-weight-bold"><%= displayName %></span
        ><span class="text-black-50"> email@mail.com.my</span><span> </span>
        <Button class="btn-sm m-1">Export Data</Button>
        <Button class="btn-sm m-1">Import Data</Button>
      </div>
    </div>
    <div class="col-md-8 border-right">
      <div
        class="
          d-flex
          flex-wrap flex-row
          align-items-center
          text-center
          p-3
          py-2
        "
      >
        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"><%= healthData.steps %></span>
          </div>
          <span class="text-black-50"> Steps</span>
        </div>

        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"
              ><%= healthData.badgesEarned %></span
            >
          </div>
          <span class="text-black-50"> badgesEarned</span>
        </div>

        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"
              ><%= healthData.caloriesBurned %></span
            >
          </div>
          <span class="text-black-50"> caloriesBurned</span>
        </div>
        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"
              ><%= healthData.fitnessPrograms %></span
            >
          </div>
          <span class="text-black-50"> fitnessPrograms</span>
        </div>
        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"
              ><%= healthData.activityMinutes %></span
            >
          </div>
          <span class="text-black-50"> activityMinutes</span>
        </div>
        <div class="d-flex flex-column align-items-center p-3 w-50">
          <div
            class="rounded-circle d-flex justify-content-center"
            style="width: 7rem; height: 7rem"
          >
            <span class="align-self-center"
              ><%= healthData.exposureFree %></span
            >
          </div>
          <span class="text-black-50"> exposureFree</span>
        </div>
      </div>
    </div>
  </div>
</div>
