<div class="container">
<h1>Match List</h1>

<div class="row">
    <div class="col">
    <% if(displayName) { %>
        <a href="/match-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Match</a>
        <% } %>
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th scope="col">Match ID</th>
                <th scope="col">Match</th>
                <th scope="col">Competitor 1 Name</th>
                <th scope="col">Competitor 2 Name</th>
                <th scope="col">Winner</th>
              </tr>
            </thead>
            <tbody>
                
              <!-- Repeatable Row Template -->

              <% for(let count = 0; count < match.length; count++) { %>
              
              <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= match[count].matchNumber %> </td>
                <td><%= match[count].competitor1Name %> </td>
                <td><%= match[count].competitor2Name %> </td>
                <td><%= match[count].winner %> </td>
              </tr>

              <% } %>
             
            </tbody>
          </table>


    </div>
</div>
</div>